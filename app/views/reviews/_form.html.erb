<%= simple_form_for([@book, @review], html: { class: "full-width-form" }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="rating-input">
      <%= f.label :rating, "Rating" %>
      <div class="rating-dropdown">
        <%= f.select :rating, options_for_select((1..5).map { |num| [raw("#{num} #{'&#9733;' * num}"), num] }), {}, { class: 'form-control' } %>
      </div>
    </div>
    <br>
    <%= f.input :description, label: "Description" %>
  </div>

  <div class="modal-footer">
    <%= link_to "Cancel", book_path(@book), class: "btn btn-secondary", data: { bs_dismiss: "modal" } %>
    <%= f.button :submit, "Create Review", class: "btn btn-primary" %>
  </div>
<% end %>
