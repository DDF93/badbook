<div id="booksCarousel" class="carousel slide mx-auto" data-bs-ride="false">
  <div class="carousel-inner">

    <% books.each_slice(5).with_index do |books_slice, index| %>

      <div class="carousel-item <%= 'active' if index.zero? %>">
        <div class="row justify-content-center">
          <% books_slice.each do |book| %>
            <div class="col-md-2 each-book">
              <%= render 'books/book_tile', book: book %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#booksCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#booksCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
  </button>
</div>
