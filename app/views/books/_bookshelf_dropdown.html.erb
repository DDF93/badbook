<div data-controller="dropdown">
  <!-- Button to open modal -->
<button class="add-btn" data-action="click->dropdown#toggle" data-toggle="tooltip" title="Add to Bookshelf">
  <i class="fa fa-plus"></i>
</button>

<!-- Dropdown menu -->
<div class="dropdown d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center d-none" data-dropdown-target="menu">
  <ul class="dropdown-menu position-static d-grid gap-1 p-2 mx-0 shadow w-220px position-absolute mt-5" data-bs-theme="light">
    <% Bookshelf.where(user_id: current_user).each do |shelf| %>
      <% if BookshelfBook.where(book_id: book.id).length != 0 %>
        <li class="dropdown-item">
          <%= shelf.name %>
          <i class="fa fa-check" style="margin-left: 5px;"></i>
        </li>
      <% else %>
        <li>
          <a class="dropdown-item" href="#" data-bookshelf-id="<%= shelf.id %>" data-book-id="<%= book.id %>" data-action="click->dropdown#addToBookshelf">
            <%= shelf.name %>
          </a>
        </li>
      <% end %>
    <% end %>
    <li><hr class="dropdown-divider"></li>
    <!-- Link to open modal -->
    <li><a class="dropdown-item rounded-2" href="#" data-action="click->modal#open" data-target="modal.trigger" data-bs-toggle="modal" data-bs-target="#createBookshelfModal" data-controller="modal">Create a bookshelf</a></li>  </ul>
</div>

<!-- Modal -->
<div class="modal fade" id="createBookshelfModal" tabindex="-1" aria-labelledby="createBookshelfModalLabel" aria-hidden="true" data-controller="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createBookshelfModalLabel">Create New Bookshelf</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
<form id="createBookshelfForm" data-action="submit->modal#submit" method="post" action="/bookshelves">
  <div class="mb-3">
    <label for="bookshelfName" class="form-label">Bookshelf Name</label>
    <input type="text" class="form-control" id="bookshelfName" name="bookshelf[name]">
  </div>
  <button type="submit" class="btn btn-primary">Create Bookshelf</button>
</form>
      </div>
    </div>
  </div>
</div>

</div>
