<div class="carousel-container">
  <h2>Featured Books</h2>
  <div class="carousel" id="carousel-featured">
    <div class="carousel-books">
      <% @books.first(15).each do |book| %>
        <%= render partial: "book_tile", locals: { book: book } %>
      <% end %>
    </div>
    <div class="carousel-arrow right" onclick="scrollRight('carousel-featured')">&#10095;</div>
  </div>
</div>
