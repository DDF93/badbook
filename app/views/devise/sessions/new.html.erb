<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="form-wrapper" style="background-color: white; padding: 40px;">
        <div class="mb-3 d-flex align-items-center">
          <h2 class="join-text" style="height: auto;">Log in </h2>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: user_session_path, html: {class: "form"}) do |f| %>
          <%= f.error_notification %>

          <div class="form-group mb-3">
            <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, wrapper: false, label_html: { class: "form-label" }, class: "form-control mb-3" %>
          </div>

          <div class="form-group mb-3">
            <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, wrapper: false, label_html: { class: "form-label" }, class: "form-control mb-3" %>
          </div>

          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

          <div class="form-actions d-flex justify-content-center align-items-center">
            <%= f.button :submit, "Log in", class: "btn btn-outline-secondary btn-md mt-3 mb-3" %>
          </div>

          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "back-link mt-3" %><br />
          <%= link_to "Sign up", new_registration_path(resource_name), class: "back-link mt-5 "%><br />
        <% end %>
      </div>
    </div>
  </div>
</div>
