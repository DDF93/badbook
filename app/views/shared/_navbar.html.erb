<div class="navbar navbar-expand-sm navbar-light navbar-badbook sticky-top solid-navbar" id="navbar">
  <div class="container-fluid">
    <div class="d-flex align-items-center">

      <%= link_to root_path, class: "navbar-brand mr-auto" do %>
        <%= image_tag "badbook-logo.png" %>
      <% end %>

      <div class="d-flex align-items-center ml-3">
        <%= form_with url: "/search", method: :get, class: "form-inline d-flex" do %>
          <div class="input-group">
            <%= text_field_tag :query,
                  params[:query],
                  class: "form-control search-input",
                  placeholder: "Find books..."
            %>
            <button type="submit" class="btn btn-outline-success search-button">
              <i class="fa-solid fa-magnifying-glass"></i>
            </button>
          </div>
        <% end %>
      </div>
    </div>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Books", books_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <div class="link-with-counter">
              <%= link_to "Bookclubs", sessions_path, class: "nav-link" %>
              <%= render 'shared/counter' %>
            </div>
          </li>
          <li class="nav-item">
            <%= link_to "My Library", my_library_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag "katniss.jpg", class: "avatar", alt: "dropdown menu" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to "Books", books_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Bookclubs", sessions_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
